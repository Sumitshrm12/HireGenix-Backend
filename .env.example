# HireGenix Backend Environment Variables
# Copy this file to .env and fill in your values

# ==================== DATABASE ====================
# Azure PostgreSQL (Production)
DATABASE_URL="postgresql://username:password@hiregenix-india.postgres.database.azure.com:5432/hiregenix?sslmode=require"

# ==================== OPENAI / AI ====================
OPENAI_API_KEY="your-openai-api-key"
AZURE_OPENAI_ENDPOINT="https://your-resource.openai.azure.com/"
AZURE_OPENAI_API_KEY="your-azure-openai-key"
AZURE_API_VERSION="2024-02-01"

# ==================== REDIS ====================
REDIS_URL="redis://default:password@your-redis-host:6379"
# For Azure Redis Enterprise:
# REDIS_URL="rediss://default:password@hiregenix.eastus.redisenterprise.cache.azure.net:10000"

# ==================== QDRANT VECTOR DB ====================
QDRANT_HOST="your-qdrant-host"
QDRANT_PORT="6333"
QDRANT_API_KEY="your-qdrant-api-key"

# ==================== TAVILY (Web Search) ====================
TAVILY_API_KEY="your-tavily-api-key"

# ==================== SERVER ====================
PORT=8000
HOST=0.0.0.0
ENVIRONMENT=production

# ==================== CORS ====================
CORS_ORIGINS="https://your-frontend-domain.vercel.app"

# ==================== WEBSOCKET ====================
WEBSOCKET_SECRET="your-websocket-secret"
